<section class="hp-hero">
  <div class="hp-hero-bg" aria-hidden="true">
    <div class="hp-hero-mesh"></div>
  </div>

  <div class="hp-hero-inner">
    <!-- Badge pill -->
    <div class="hp-hero-badge">
      <span>Open Source</span>
      <span class="hp-hero-badge-sep" aria-hidden="true"></span>
      <span>MIT Licensed</span>
      <span class="hp-hero-badge-sep" aria-hidden="true"></span>
      <span>Go 1.23+</span>
    </div>

    <!-- H1 -->
    <h1 class="hp-hero-title">
      The Go Framework for<br />Production AI Agents
    </h1>

    <!-- Subheadline -->
    <p class="hp-hero-sub">
      Build, orchestrate, and deploy agentic AI systems with streaming-first design,
      22+ LLM providers, and enterprise-grade infrastructure.
      One <code class="hp-hero-code-inline">go get</code> away.
    </p>

    <!-- CTAs -->
    <div class="hp-hero-ctas">
      <a href="/docs/getting-started/overview/" class="hp-btn hp-btn-primary">
        Get Started
