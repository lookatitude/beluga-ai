    </div>

    <!-- Code preview -->
    <div class="hp-hero-code">
      <div class="hp-hero-code-header">
        <div class="hp-hero-code-dots" aria-hidden="true">
          <span></span><span></span><span></span>
        </div>
        <span class="hp-hero-code-filename">main.go</span>
      </div>
      <pre class="hp-hero-code-block"><code><span class="c-ident">model</span>, _ := <span class="c-pkg">llm</span>.<span class="c-func">New</span>(<span class="c-str">"openai"</span>, <span class="c-pkg">llm</span>.ProviderConfig&#123;Model: <span class="c-str">"gpt-4o"</span>&#125;)
<span class="c-ident">agent</span> := <span class="c-pkg">agent</span>.<span class="c-func">New</span>(<span class="c-str">"researcher"</span>,
    <span class="c-pkg">agent</span>.<span class="c-func">WithLLM</span>(<span class="c-ident">model</span>),
    <span class="c-pkg">agent</span>.<span class="c-func">WithTools</span>(<span class="c-ident">webSearch</span>, <span class="c-ident">calculator</span>),
    <span class="c-pkg">agent</span>.<span class="c-func">WithMemory</span>(<span class="c-pkg">memory</span>.<span class="c-func">NewSemantic</span>(<span class="c-ident">embedder</span>, <span class="c-ident">store</span>)),
)
<span class="c-kw">for</span> <span class="c-ident">event</span>, <span class="c-ident">err</span> := <span class="c-kw">range</span> <span class="c-ident">agent</span>.<span class="c-func">Stream</span>(<span class="c-ident">ctx</span>, <span class="c-str">"Analyze Q4 earnings"</span>) &#123;
