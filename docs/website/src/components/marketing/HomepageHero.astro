    </div>
  </div>
</section>

<style>
  .hp-hero {
    position: relative;
    padding: 9rem 1.5rem 5rem;
    text-align: center;
    overflow: hidden;
  }

  /* Gradient mesh background */
  .hp-hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
    pointer-events: none;
  }

  .hp-hero-mesh {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse 60% 50% at 20% 40%, color-mix(in srgb, #3a1c71 15%, transparent), transparent),
      radial-gradient(ellipse 50% 60% at 80% 30%, color-mix(in srgb, #D76D77 10%, transparent), transparent),
      radial-gradient(ellipse 40% 40% at 50% 80%, color-mix(in srgb, #5CA3CA 8%, transparent), transparent);
    opacity: 0.7;
  }

  :root[data-theme="light"] .hp-hero-mesh {
    background:
      radial-gradient(ellipse 60% 50% at 20% 40%, color-mix(in srgb, #3a1c71 8%, transparent), transparent),
      radial-gradient(ellipse 50% 60% at 80% 30%, color-mix(in srgb, #D76D77 6%, transparent), transparent),
      radial-gradient(ellipse 40% 40% at 50% 80%, color-mix(in srgb, #5CA3CA 5%, transparent), transparent);
    opacity: 0.5;
  }

  .hp-hero-inner {
    position: relative;
    z-index: 1;
    max-width: 900px;
    margin: 0 auto;
  }

  /* Badge pill */
  .hp-hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.625rem;
    padding: 0.375rem 1rem;
    font-size: 0.8125rem;
    font-weight: 500;
    color: color-mix(in srgb, var(--color-light, #f6f6f6) 70%, transparent);
    background: color-mix(in srgb, var(--color-light, #f6f6f6) 6%, transparent);
    border: 1px solid color-mix(in srgb, var(--color-light, #f6f6f6) 10%, transparent);
    border-radius: 9999px;
    margin-bottom: 2rem;
  }

  :root[data-theme="light"] .hp-hero-badge {
    color: color-mix(in srgb, var(--color-lightmode-light, #181818) 65%, transparent);
    background: color-mix(in srgb, var(--color-lightmode-light, #181818) 5%, transparent);
    border-color: color-mix(in srgb, var(--color-lightmode-light, #181818) 10%, transparent);
  }

  .hp-hero-badge-sep {
    width: 4px;
    height: 4px;
    border-radius: 50%;
    background: color-mix(in srgb, var(--color-light, #f6f6f6) 30%, transparent);
  }

  :root[data-theme="light"] .hp-hero-badge-sep {
    background: color-mix(in srgb, var(--color-lightmode-light, #181818) 30%, transparent);
  }

  /* H1 */
  .hp-hero-title {
    font-size: clamp(2.5rem, 7vw, 4.5rem);
    font-weight: 800;
    line-height: 1.05;
    letter-spacing: -0.03em;
    margin: 0 0 1.5rem;
    color: var(--color-light, #f6f6f6);
  }

  :root[data-theme="light"] .hp-hero-title {
    color: var(--color-lightmode-light, #181818);
  }

  /* Subheadline */
  .hp-hero-sub {
    font-size: clamp(1.0625rem, 2vw, 1.25rem);
    color: color-mix(in srgb, var(--color-light, #f6f6f6) 60%, transparent);
    max-width: 40rem;
    margin: 0 auto 2.5rem;
    line-height: 1.65;
  }

  :root[data-theme="light"] .hp-hero-sub {
    color: color-mix(in srgb, var(--color-lightmode-light, #181818) 60%, transparent);
  }

  .hp-hero-code-inline {
    padding: 0.15em 0.45em;
    font-size: 0.9em;
    font-family: "SF Mono", "Fira Code", "Fira Mono", "Roboto Mono", monospace;
    background: color-mix(in srgb, var(--color-light, #f6f6f6) 8%, transparent);
    border-radius: 0.3rem;
    color: var(--color-primary, #5CA3CA);
  }

  :root[data-theme="light"] .hp-hero-code-inline {
    background: color-mix(in srgb, var(--color-lightmode-light, #181818) 8%, transparent);
  }

  /* CTAs */
  .hp-hero-ctas {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 3.5rem;
  }

  .hp-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    font-size: 0.9375rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 0.75rem;
    transition: transform 0.15s ease, filter 0.15s ease;
    cursor: pointer;
    border: none;
    font-family: inherit;
  }

  .hp-btn:hover {
    transform: scale(1.03);
  }

  .hp-btn-primary {
    background: var(--color-primary-gradient);
    color: #fff;
  }

  .hp-btn-primary:hover {
    filter: brightness(1.1);
  }

  .hp-btn-outline {
    position: relative;
    background: transparent;
    color: var(--color-light, #f6f6f6);
  }

  .hp-btn-outline::before {
    content: "";
    position: absolute;
    inset: 0;
    padding: 2px;
    background: var(--color-primary-gradient);
    border-radius: inherit;
    mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    mask-composite: exclude;
    -webkit-mask-composite: xor;
  }

  .hp-btn-outline:hover {
    background: var(--color-primary-gradient);
    color: #fff;
  }

  :root[data-theme="light"] .hp-btn-outline {
    color: var(--color-lightmode-light, #181818);
  }

  /* Code preview */
  .hp-hero-code {
    max-width: 700px;
    margin: 0 auto;
    border-radius: 1rem;
    overflow: hidden;
    background: color-mix(in srgb, var(--color-dark, #151515) 95%, transparent);
    border: 1px solid color-mix(in srgb, var(--color-light, #f6f6f6) 8%, transparent);
    text-align: left;
  }

  :root[data-theme="light"] .hp-hero-code {
    background: #f8f8f8;
    border-color: color-mix(in srgb, var(--color-lightmode-light, #181818) 10%, transparent);
  }

  .hp-hero-code-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1.25rem;
    border-bottom: 1px solid color-mix(in srgb, var(--color-light, #f6f6f6) 6%, transparent);
  }

  :root[data-theme="light"] .hp-hero-code-header {
    border-bottom-color: color-mix(in srgb, var(--color-lightmode-light, #181818) 8%, transparent);
  }

  .hp-hero-code-dots {
    display: flex;
    gap: 6px;
  }

  .hp-hero-code-dots span {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: color-mix(in srgb, var(--color-light, #f6f6f6) 12%, transparent);
  }

  :root[data-theme="light"] .hp-hero-code-dots span {
    background: color-mix(in srgb, var(--color-lightmode-light, #181818) 12%, transparent);
  }

  .hp-hero-code-filename {
    font-size: 0.75rem;
    color: color-mix(in srgb, var(--color-light, #f6f6f6) 40%, transparent);
    font-family: "SF Mono", "Fira Code", "Fira Mono", "Roboto Mono", monospace;
  }

  :root[data-theme="light"] .hp-hero-code-filename {
    color: color-mix(in srgb, var(--color-lightmode-light, #181818) 40%, transparent);
  }

  .hp-hero-code-block {
    padding: 1.25rem 1.5rem;
    margin: 0;
    overflow-x: auto;
    font-size: 0.8125rem;
    line-height: 1.75;
    font-family: "SF Mono", "Fira Code", "Fira Mono", "Roboto Mono", monospace;
    color: var(--color-light, #f6f6f6);
  }

  :root[data-theme="light"] .hp-hero-code-block {
    color: var(--color-lightmode-light, #181818);
  }

  /* Syntax highlighting */
  .c-comment { color: #6a737d; }
  .c-str { color: #a5d6ff; }
  .c-pkg { color: #d2a8ff; }
  .c-func { color: #79c0ff; }
  .c-ident { color: #ffa657; }
  .c-kw { color: #ff7b72; }

  :root[data-theme="light"] .c-str { color: #0a3069; }
  :root[data-theme="light"] .c-pkg { color: #8250df; }
  :root[data-theme="light"] .c-func { color: #0550ae; }
  :root[data-theme="light"] .c-ident { color: #953800; }
  :root[data-theme="light"] .c-comment { color: #6e7781; }
  :root[data-theme="light"] .c-kw { color: #cf222e; }

  @media (max-width: 640px) {
    .hp-hero {
      padding: 7rem 1rem 3rem;
    }
    .hp-hero-code-block {
      font-size: 0.6875rem;
    }
  }
</style>
