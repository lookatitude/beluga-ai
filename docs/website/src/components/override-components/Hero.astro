---
import Search from "./Search.astro";
const { data } = Astro.locals.starlightRoute.entry;
const { title = data.title, tagline } = data.hero || {};
const { sidebar } = Astro.locals.starlightRoute;

function getFirstHref(item: any): string | null {
  if (typeof item?.href === "string" && item.href) {
    return item.href;
  }
  if (item?.entries && Array.isArray(item.entries) && item.entries.length > 0) {
    return getFirstHref(item.entries[0]);
  }
  return null; // No valid href found
}

// check if 404 page
const is404 = Astro.locals.starlightRoute?.id === "404";
---

<div
  class="hero flex flex-col items-center text-center mx-auto px-4 sm:px-6 lg:px-8 pt-20 pb-35"
>
  {!is404 && (
    <div class="hero-logo mb-6">
      <img src="/beluga-logo.svg" alt="Beluga AI" class="hero-logo-img" />
    </div>
  )}
  {tagline && <p set:html={tagline} class="text-xl text-center max-w-2xl" />}

  {
    !is404 && (
      <div class="mt-12 max-w-4xl w-full mx-auto">
        <div class="search-container rounded-2xl p-2 mb-6">
          <div class="search-bar">
            <Search />
          </div>
        </div>

        <div class="flex justify-center items-center flex-wrap gap-4">
          <p class="text-base font-normal">
            {Astro.locals.t("hero.popular", "Popular")}:
          </p>
          <div class="flex gap-4 badges px-3 py-2.5 rounded-xl flex-wrap justify-center">
            {sidebar.map((item: any) => {
              const href = getFirstHref(item);
              return (
                <div class="badge rounded-lg px-2 py-1.5 group transition">
                  <a
                    class="cursor-pointer text-text no-underline group-hover:text-black dark:group-hover:text-white transition-colors"
                    href={href}
                  >
                    {item.label}
                  </a>
                </div>
              );
            })}
          </div>
        </div>
      </div>
    )
  }
</div>

<style>
  @layer starlight.core {
    h1 {
      font-size: 7rem !important;
      line-height: 6.5rem !important;
      letter-spacing: -4px;
      color: var(--sl-color-white);
    }

    /* Search container with glassmorphism */
    .search-container {
      width: 90%;
      margin: auto;
      border: 1px solid
        color-mix(in srgb, var(--sl-color-white) 10%, transparent);
      background: color-mix(in srgb, var(--sl-color-white) 4%, transparent);
      backdrop-filter: blur(16px);
      -webkit-backdrop-filter: blur(16px);
      box-shadow: 0 4px 24px rgba(0, 0, 0, 0.12);
    }

    .badges {
      background-color: color-mix(
        in srgb,
        var(--sl-color-white) 3%,
        transparent
      );
    }

    /* Badge styling: slightly larger, hover scale */
    .badge {
      background: color-mix(in srgb, var(--sl-color-white) 7%, transparent);
      font-size: 14.5px;
      transition: background 0.25s ease, transform 0.25s ease;
    }
    .badge:hover {
      background: color-mix(in srgb, var(--sl-color-white) 15%, transparent);
      transform: scale(1.05);
    }

    /* Logo container with glow pseudo-element */
    .hero-logo {
      display: flex;
      justify-content: center;
      position: relative;
    }
    .hero-logo::before {
      content: "";
      position: absolute;
      top: 50%;
      left: 50%;
      width: 320px;
      height: 320px;
      transform: translate(-50%, -50%);
      background: radial-gradient(
        circle,
        rgba(92, 163, 202, 0.35) 0%,
        rgba(15, 51, 83, 0.15) 50%,
        transparent 70%
      );
      border-radius: 50%;
      animation: glow-pulse 4s ease-in-out infinite;
      pointer-events: none;
      z-index: 0;
    }

    /* Logo image with float animation */
    .hero-logo-img {
      width: 360px;
      height: 360px;
      filter: drop-shadow(0 0 30px rgba(92, 163, 202, 0.3));
      position: relative;
      z-index: 1;
      animation: float 5s ease-in-out infinite;
    }

    @keyframes glow-pulse {
      0%, 100% { opacity: 0.3; transform: translate(-50%, -50%) scale(1); }
      50% { opacity: 0.5; transform: translate(-50%, -50%) scale(1.05); }
    }

    @keyframes float {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-8px); }
    }

    @media (max-width: 940px) {
      h1 {
        font-size: 3.5rem !important;
        line-height: 3.5rem !important;
        letter-spacing: -2px;
      }
      .hero-logo-img {
        width: 240px;
        height: 240px;
      }
      .hero-logo::before {
        width: 220px;
        height: 220px;
      }
      .search-container {
        width: 100%;
      }
    }

    @media (max-width: 480px) {
      .hero-logo-img {
        width: 180px;
        height: 180px;
      }
      .hero-logo::before {
        width: 160px;
        height: 160px;
      }
    }
  }
</style>
<script>
  const iconElements = document.querySelector("[data-icon-path]");
  const heroSection = document.querySelector(".hero");
  const header = document.querySelector(".header");
  const heroBG = document.querySelector(".hero-bg") as HTMLElement;

  const totalHeight =
    (heroSection?.clientHeight || 0) + (header?.clientHeight || 0) + 24;

  heroBG.style.height = `${totalHeight}px`;

  // make image element and add the path to src
  if (iconElements) {
    const iconPath = iconElements.getAttribute("data-icon-path");

    const img = document.createElement("img");
    img.src = `/${iconPath}` || "";
    img.alt = "icon";
    img.className =
      "hidden lg:inline-block size-20 -mb-2 rounded-2xl animate-[bounce_2s_ease-in-out_infinite]";
    iconElements.replaceWith(img);
  }
</script>
