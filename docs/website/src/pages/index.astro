---
import MarketingLayout from "@/layouts/MarketingLayout.astro";
import HomepageHero from "@/components/marketing/HomepageHero.astro";
import ProblemSolution from "@/components/marketing/ProblemSolution.astro";
import ArchitectureDiagram from "@/components/marketing/ArchitectureDiagram.astro";
import CodeShowcase from "@/components/marketing/CodeShowcase.astro";
import ProviderGrid from "@/components/marketing/ProviderGrid.astro";

const capabilities = [
  {
    title: "Agent Runtime & Reasoning",
    href: "/features/agents/",
    description: "Build agents with pluggable reasoning — ReAct, Tree-of-Thought, LATS, Reflexion, and more. Handoffs-as-tools enable multi-agent collaboration with zero boilerplate.",
    icon: "agent",
  },
  {
    title: "LLM Abstraction & Routing",
    href: "/features/llm/",
    description: "Unified ChatModel interface across 22+ providers with intelligent routing, structured output, context window management, and provider-aware rate limiting.",
    icon: "llm",
  },
  {
    title: "RAG Pipeline",
    href: "/features/rag/",
    description: "Hybrid retrieval combining dense vectors, BM25, and graph traversal with RRF. Advanced strategies: CRAG, Adaptive RAG, HyDE, GraphRAG.",
    icon: "rag",
  },
  {
    title: "Voice Pipeline",
    href: "/features/voice/",
    description: "Frame-based STT to LLM to TTS processing with sub-800ms latency. Speech-to-speech modes, Silero VAD, semantic turn detection, WebRTC/LiveKit transports.",
    icon: "voice",
  },
  {
    title: "Guardrails & Safety",
    href: "/features/guardrails/",
    description: "Three-stage guard pipeline with prompt injection detection, PII filtering, and capability-based sandboxing with default-deny policies.",
    icon: "guard",
  },
  {
    title: "Protocols & Interop",
    href: "/features/protocols/",
    description: "First-class MCP server/client for tool ecosystems and A2A for agent-to-agent communication. REST, SSE, gRPC, and WebSocket transports.",
    icon: "protocol",
  },
];

const stats = [
  { value: "22+", label: "LLM Providers", footnote: "OpenAI, Anthropic, Gemini, Ollama, Bedrock, Groq..." },
  { value: "157", label: "Packages", footnote: "Covering every layer of agent development" },
  { value: "2,885", label: "Tests", footnote: "Production-grade test coverage" },
  { value: "108", label: "Integrations", footnote: "Vector stores, embeddings, voice, tools, infra" },
];

const jsonLd = JSON.stringify({
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "WebSite",
      "name": "Beluga AI",
      "url": "https://beluga-ai.org",
      "description": "Build production-ready AI agents in Go"
    },
    {
      "@type": "SoftwareApplication",
      "name": "Beluga AI",
      "applicationCategory": "DeveloperApplication",
      "operatingSystem": "Cross-platform",
      "programmingLanguage": "Go",
      "license": "https://opensource.org/licenses/MIT",
      "url": "https://beluga-ai.org",
      "offers": { "@type": "Offer", "price": "0", "priceCurrency": "USD" }
    }
  ]
});
---

<MarketingLayout
  title="Beluga AI"
  description="Build production-ready AI agents in Go with Beluga AI. Streaming-first design, 22+ LLM providers, RAG, voice AI, and enterprise-grade infrastructure."
  jsonLd={jsonLd}
>

  <!-- Block 1.1 — Hero -->
  <HomepageHero />

  <!-- Block 1.2 — Social Proof Bar -->
  <section class="sp-section" aria-label="Project statistics">
    <div class="sp-inner">
      {stats.map((stat) => (
        <div class="sp-card">
          <span class="sp-value">{stat.value}</span>
          <span class="sp-label">{stat.label}</span>
          <span class="sp-footnote">{stat.footnote}</span>
        </div>
      ))}
    </div>
  </section>

  <!-- Block 1.3 — Problem / Solution -->
  <ProblemSolution />

  <!-- Block 1.4 — Core Capabilities Grid -->
  <section class="cap-section">
    <div class="cap-inner">
      <div class="cap-header">
        <h2 class="cap-heading">
          Core <span class="cap-heading-muted">capabilities</span>
        </h2>
        <p class="cap-subtitle">Everything you need to build, deploy, and operate agentic AI systems.</p>
      </div>

      <div class="cap-grid">
        {capabilities.map((cap) => (
          <a href={cap.href} class="cap-card">
            <div class="cap-icon" aria-hidden="true">
              {cap.icon === "agent" && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <circle cx="12" cy="8" r="4" /><path d="M6 21v-2a4 4 0 014-4h4a4 4 0 014 4v2" /><path d="M16 3.13a4 4 0 010 7.75" /><path d="M21 21v-2a4 4 0 00-3-3.87" />
                </svg>
              )}
              {cap.icon === "llm" && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <rect x="3" y="3" width="18" height="18" rx="3" /><path d="M9 9l3 3-3 3" /><line x1="14" y1="15" x2="17" y2="15" />
                </svg>
              )}
              {cap.icon === "rag" && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M4 19.5A2.5 2.5 0 016.5 17H20" /><path d="M6.5 2H20v20H6.5A2.5 2.5 0 014 19.5v-15A2.5 2.5 0 016.5 2z" /><path d="M8 7h8M8 11h5" />
                </svg>
              )}
              {cap.icon === "voice" && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M12 1a3 3 0 00-3 3v8a3 3 0 006 0V4a3 3 0 00-3-3z" /><path d="M19 10v2a7 7 0 01-14 0v-2" /><line x1="12" y1="19" x2="12" y2="23" /><line x1="8" y1="23" x2="16" y2="23" />
                </svg>
              )}
              {cap.icon === "guard" && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" />
                </svg>
              )}
              {cap.icon === "protocol" && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M10 13a5 5 0 007.54.54l3-3a5 5 0 00-7.07-7.07l-1.72 1.71" /><path d="M14 11a5 5 0 00-7.54-.54l-3 3a5 5 0 007.07 7.07l1.71-1.71" />
                </svg>
              )}
            </div>
            <h3 class="cap-card-title">{cap.title}</h3>
            <p class="cap-card-desc">{cap.description}</p>
            <span class="cap-card-link">
              Learn more
              <svg width="12" height="12" viewBox="0 0 12 12" fill="none" aria-hidden="true">
                <path d="M1 6h10M7 2l4 4-4 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
              </svg>
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Block 1.5 — Architecture Diagram -->
  <ArchitectureDiagram />

  <!-- Block 1.6 — Code Showcase -->
  <CodeShowcase />

  <!-- Block 1.7 — Provider Grid -->
  <ProviderGrid />

  <!-- Block 1.8 — Why Go Teaser -->
  <section class="wg-section">
    <div class="wg-inner">
      <h2 class="wg-heading">Go is the production language for AI infrastructure</h2>

      <div class="wg-grid">
        <div class="wg-card">
          <span class="wg-card-tag">Performance</span>
          <p class="wg-card-stat">15,000+ RPS</p>
          <p class="wg-card-desc">with p95 &lt; 30ms. Compiled to machine code. No GIL.</p>
        </div>
        <div class="wg-card">
          <span class="wg-card-tag">Deployment</span>
          <p class="wg-card-stat">Single binary</p>
          <p class="wg-card-desc">No dependency management. Smallest container images.</p>
        </div>
        <div class="wg-card">
          <span class="wg-card-tag">Cloud-native</span>
          <p class="wg-card-stat">Born for K8s</p>
          <p class="wg-card-desc">Kubernetes, Docker, Terraform are all Go. Your AI agents should be too.</p>
        </div>
      </div>

      <div class="wg-cta">
        <a href="/about/#why-go" class="wg-cta-link">
          Read the full case for Go
          <svg width="14" height="14" viewBox="0 0 12 12" fill="none" aria-hidden="true">
            <path d="M1 6h10M7 2l4 4-4 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Block 1.9 — Getting Started CTA -->
  <section class="gs-section">
    <div class="gs-bg" aria-hidden="true"></div>
    <div class="gs-inner">
      <h2 class="gs-heading">Start building AI agents in 5 minutes</h2>

      <div class="gs-steps">
        <div class="gs-step">
          <span class="gs-step-num">1</span>
          <div class="gs-step-content">
            <span class="gs-step-label">Install</span>
            <code class="gs-step-code">go get github.com/lookatitude/beluga-ai</code>
          </div>
        </div>
        <div class="gs-step-arrow" aria-hidden="true">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
            <path d="M5 10h10M11 6l4 4-4 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
        </div>
        <div class="gs-step">
          <span class="gs-step-num">2</span>
          <div class="gs-step-content">
            <span class="gs-step-label">Configure</span>
            <code class="gs-step-code">export OPENAI_API_KEY=sk-...</code>
          </div>
        </div>
        <div class="gs-step-arrow" aria-hidden="true">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
            <path d="M5 10h10M11 6l4 4-4 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
        </div>
        <div class="gs-step">
          <span class="gs-step-num">3</span>
          <div class="gs-step-content">
            <span class="gs-step-label">Run</span>
            <code class="gs-step-code">go run main.go</code>
          </div>
        </div>
      </div>

      <div class="gs-ctas">
        <a href="/docs/getting-started/quick-start/" class="gs-btn gs-btn-primary">
          Read the Quick Start
          <svg width="14" height="14" viewBox="0 0 12 12" fill="none" aria-hidden="true">
            <path d="M1 6h10M7 2l4 4-4 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
        </a>
        <a href="/docs/cookbook/" class="gs-btn gs-btn-outline">
          Browse the Cookbook
          <svg width="14" height="14" viewBox="0 0 12 12" fill="none" aria-hidden="true">
            <path d="M1 6h10M7 2l4 4-4 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
        </a>
      </div>
    </div>
  </section>

</MarketingLayout>

<style>
  /* ═══════════════════════════════════════
     Block 1.2 — Social Proof Bar
     ═══════════════════════════════════════ */
  .sp-section {
    padding: 0 1.5rem 4rem;
  }

  .sp-inner {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    max-width: 900px;
    margin: 0 auto;
  }

  @media (min-width: 640px) {
    .sp-inner {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .sp-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 0.25rem;
    padding: 1.25rem 1rem;
    border-radius: 1rem;
    background: color-mix(in srgb, var(--color-dark, #151515) 60%, transparent);
    border: 1px solid color-mix(in srgb, var(--color-light, #f6f6f6) 6%, transparent);
    transition: border-color 0.2s ease;
  }

  .sp-card:hover {
    border-color: color-mix(in srgb, var(--color-primary) 25%, transparent);
  }

  :root[data-theme="light"] .sp-card {
    background: color-mix(in srgb, var(--color-lightmode-dark, #f7f7f7) 60%, transparent);
    border-color: color-mix(in srgb, var(--color-lightmode-light, #181818) 6%, transparent);
  }

  :root[data-theme="light"] .sp-card:hover {
    border-color: color-mix(in srgb, var(--color-primary) 25%, transparent);
  }

  .sp-value {
    font-size: clamp(1.5rem, 3vw, 2.25rem);
    font-weight: 800;
    line-height: 1.1;
    background: var(--color-primary-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .sp-label {
    font-size: 0.8125rem;
    color: color-mix(in srgb, var(--color-light, #f6f6f6) 60%, transparent);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 600;
  }

  :root[data-theme="light"] .sp-label {
    color: color-mix(in srgb, var(--color-lightmode-light, #181818) 55%, transparent);
  }

  .sp-footnote {
    font-size: 0.6875rem;
    color: color-mix(in srgb, var(--color-light, #f6f6f6) 35%, transparent);
    line-height: 1.4;
    margin-top: 0.25rem;
  }

  :root[data-theme="light"] .sp-footnote {
    color: color-mix(in srgb, var(--color-lightmode-light, #181818) 35%, transparent);
  }


  /* ═══════════════════════════════════════
     Block 1.4 — Core Capabilities Grid
     ═══════════════════════════════════════ */
  .cap-section {
    padding: 4rem 1.5rem;
  }

  .cap-inner {
    max-width: 1200px;
    margin: 0 auto;
  }

  .cap-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .cap-heading {
    font-size: clamp(2rem, 4.5vw, 3.5rem);
    font-weight: 800;
    line-height: 1.1;
    letter-spacing: -0.03em;
    margin: 0 0 1rem;
    color: var(--color-light, #f6f6f6);
  }

  :root[data-theme="light"] .cap-heading {
    color: var(--color-lightmode-light, #181818);
  }

  .cap-heading-muted {
    color: color-mix(in srgb, var(--color-light, #f6f6f6) 40%, transparent);
  }

  :root[data-theme="light"] .cap-heading-muted {
    color: color-mix(in srgb, var(--color-lightmode-light, #181818) 40%, transparent);
  }

  .cap-subtitle {
    font-size: 1.125rem;
    color: color-mix(in srgb, var(--color-light, #f6f6f6) 55%, transparent);
    margin: 0;
    line-height: 1.6;
  }

  :root[data-theme="light"] .cap-subtitle {
    color: color-mix(in srgb, var(--color-lightmode-light, #181818) 55%, transparent);
  }

  .cap-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }

  @media (min-width: 640px) {
    .cap-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .cap-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .cap-card {
    display: flex;
    flex-direction: column;
    padding: 1.5rem;
    border-radius: 1rem;
    background: color-mix(in srgb, var(--color-dark, #151515) 80%, transparent);
    border: 1px solid color-mix(in srgb, var(--color-light, #f6f6f6) 6%, transparent);
    text-decoration: none;
    color: inherit;
    position: relative;
    transition: transform 0.2s ease, border-color 0.2s ease;
  }

  .cap-card::before {
    content: "";
    position: absolute;
    inset: 0;
    padding: 1px;
    background: var(--color-primary-gradient);
    border-radius: inherit;
    mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    mask-composite: exclude;
    -webkit-mask-composite: xor;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .cap-card:hover::before {
    opacity: 0.5;
  }

  .cap-card:hover {
    transform: translateY(-2px);
  }

  :root[data-theme="light"] .cap-card {
    background: color-mix(in srgb, var(--color-lightmode-dark, #f7f7f7) 80%, transparent);
    border-color: color-mix(in srgb, var(--color-lightmode-light, #181818) 6%, transparent);
  }

  .cap-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 0.625rem;
    background: color-mix(in srgb, var(--color-primary) 10%, transparent);
    color: var(--color-primary, #5CA3CA);
    margin-bottom: 1rem;
    flex-shrink: 0;
  }

  .cap-card-title {
    font-size: 1.0625rem;
    font-weight: 600;
    color: var(--color-light, #f6f6f6);
    margin: 0 0 0.5rem;
    line-height: 1.3;
  }

  :root[data-theme="light"] .cap-card-title {
    color: var(--color-lightmode-light, #181818);
  }

  .cap-card-desc {
    font-size: 0.875rem;
    color: color-mix(in srgb, var(--color-light, #f6f6f6) 55%, transparent);
    margin: 0;
    line-height: 1.65;
    flex: 1;
  }

  :root[data-theme="light"] .cap-card-desc {
    color: color-mix(in srgb, var(--color-lightmode-light, #181818) 55%, transparent);
  }

  .cap-card-link {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    margin-top: 1rem;
    font-size: 0.8125rem;
    font-weight: 500;
    color: var(--color-primary, #5CA3CA);
    transition: gap 0.15s ease;
  }

  .cap-card:hover .cap-card-link {
    gap: 0.625rem;
  }


  /* ═══════════════════════════════════════
     Block 1.8 — Why Go Teaser
     ═══════════════════════════════════════ */
  .wg-section {
    padding: 5rem 1.5rem;
  }

  .wg-inner {
    max-width: 1000px;
    margin: 0 auto;
    text-align: center;
  }

  .wg-heading {
    font-size: clamp(1.75rem, 4vw, 2.75rem);
    font-weight: 800;
    line-height: 1.15;
    letter-spacing: -0.02em;
    margin: 0 0 3rem;
    color: var(--color-light, #f6f6f6);
  }

  :root[data-theme="light"] .wg-heading {
    color: var(--color-lightmode-light, #181818);
  }

  .wg-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.25rem;
    margin-bottom: 2.5rem;
  }

  @media (min-width: 768px) {
    .wg-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .wg-card {
    padding: 1.75rem 1.5rem;
    border-radius: 1rem;
    background: color-mix(in srgb, var(--color-dark, #151515) 80%, transparent);
    border: 1px solid color-mix(in srgb, var(--color-light, #f6f6f6) 6%, transparent);
    text-align: center;
  }

  :root[data-theme="light"] .wg-card {
    background: color-mix(in srgb, var(--color-lightmode-dark, #f7f7f7) 80%, transparent);
    border-color: color-mix(in srgb, var(--color-lightmode-light, #181818) 6%, transparent);
  }

  .wg-card-tag {
    display: inline-block;
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    padding: 0.2rem 0.6rem;
    border-radius: 9999px;
    background: color-mix(in srgb, var(--color-primary) 12%, transparent);
    color: var(--color-primary, #5CA3CA);
    margin-bottom: 1rem;
  }

  .wg-card-stat {
    font-size: 1.5rem;
    font-weight: 800;
    color: var(--color-light, #f6f6f6);
    margin: 0 0 0.375rem;
    line-height: 1.2;
  }

  :root[data-theme="light"] .wg-card-stat {
    color: var(--color-lightmode-light, #181818);
  }

  .wg-card-desc {
    font-size: 0.875rem;
    color: color-mix(in srgb, var(--color-light, #f6f6f6) 50%, transparent);
    margin: 0;
    line-height: 1.6;
  }

  :root[data-theme="light"] .wg-card-desc {
    color: color-mix(in srgb, var(--color-lightmode-light, #181818) 50%, transparent);
  }

  .wg-cta {
    text-align: center;
  }

  .wg-cta-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--color-primary, #5CA3CA);
    text-decoration: none;
    transition: gap 0.15s ease;
  }

  .wg-cta-link:hover {
    gap: 0.75rem;
  }


  /* ═══════════════════════════════════════
     Block 1.9 — Getting Started CTA
     ═══════════════════════════════════════ */
  .gs-section {
    position: relative;
    padding: 5rem 1.5rem;
    text-align: center;
    overflow: hidden;
  }

  .gs-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
    background: linear-gradient(
      135deg,
      color-mix(in srgb, #3a1c71 12%, transparent),
      color-mix(in srgb, #D76D77 8%, transparent),
      color-mix(in srgb, #ffca7b 6%, transparent)
    );
    pointer-events: none;
  }

  :root[data-theme="light"] .gs-bg {
    background: linear-gradient(
      135deg,
      color-mix(in srgb, #3a1c71 6%, transparent),
      color-mix(in srgb, #D76D77 4%, transparent),
      color-mix(in srgb, #ffca7b 3%, transparent)
    );
  }

  .gs-inner {
    position: relative;
    z-index: 1;
    max-width: 900px;
    margin: 0 auto;
  }

  .gs-heading {
    font-size: clamp(2rem, 4.5vw, 3rem);
    font-weight: 800;
    line-height: 1.15;
    letter-spacing: -0.02em;
    margin: 0 0 3rem;
    background: var(--color-primary-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Steps */
  .gs-steps {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    margin-bottom: 3rem;
  }

  @media (min-width: 768px) {
    .gs-steps {
      flex-direction: row;
      justify-content: center;
      gap: 0.75rem;
    }
  }

  .gs-step {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 1.25rem;
    border-radius: 0.75rem;
