{
  "contract": "Documentation Structure Contract",
  "version": "1.0.0",
  "description": "Defines the structure and organization of documentation on the website",
  "requirements": {
    "navigation": {
      "max_depth": 3,
      "max_clicks_to_feature": 3,
      "sections": [
        "getting-started",
        "concepts",
        "api",
        "examples",
        "guides",
        "providers",
        "use-cases",
        "voice",
        "reference",
        "deprecated"
      ]
    },
    "versioning": {
      "enabled": true,
      "version_format": "semantic",
      "default_version": "latest",
      "version_selector": "navbar_dropdown"
    },
    "search": {
      "enabled": true,
      "index_content": [
        "titles",
        "headings",
        "body_text",
        "code_examples",
        "code_comments"
      ],
      "search_provider": "docusaurus_builtin"
    },
    "deprecated_content": {
      "location": "deprecated_section",
      "visibility": "limited",
      "navigation": "collapsed_by_default"
    }
  },
  "validation": {
    "broken_links": "zero_tolerance",
    "code_examples": "must_be_runnable",
    "api_documentation": "must_be_complete",
    "examples_documentation": "must_cover_all_examples"
  }
}
